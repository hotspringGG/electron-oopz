{
  "name": "oopz",
  "version": "1.5.9",
  "description": "Oopz Electron client",
  "homepage": "https://github.com/hotspringGG/",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:macOS": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "publish": "electron-forge publish",
    "release": "electron-builder --mac --windows --publish always",
    "electron": "electron",
    "build-all": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "repository": "github:hotspringGG/electron-oopz",
  "keywords": [
    "Electron",
    "oopz"
  ],
  "author": {
    "name": "ph4nt0mer",
    "email": "root@ph4nt0mer.xyz"
  },
  "license": "MIT",
  "build": {
    "productName": "Oopz",
    "appId": "HotspringDev.electron.oopz",
    "copyright": "Oopz",
    "mac": {
      "icon": "static/image.png",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "授权访问麦克风",
        "NSCameraUsageDescription": "授权访问摄像头"
      }
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icons/image.png"
      },
      "publishers": [
        {
          "name": "@hotspringGG/electron-oopz",
          "config": {
            "repository": {
              "owner": "hotspringGG",
              "name": "electron-oopz"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Oopz",
            "title": "Oopz",
            "authors": "HotspringDev",
            "exe": "Oopz.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "name": "Oopz"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "Oopz",
            "options": {
              "maintainer": "HotspringDev",
              "categories": [
                "Utility"
              ]
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "Oopz",
            "options": {
              "maintainer": "HotspringDev",
              "homepage": "https://github.com/hotspringGG/",
              "icon": "static/image.png",
              "categories": [
                "Utility"
              ]
            }
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/core": "^6.2.1",
    "@electron-forge/core-utils": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/publisher-github": "^6.2.1",
    "@electron-forge/shared-types": "^6.2.1",
    "@electron/rebuild": "^3.2.13",
    "@malept/cross-spawn-promise": "^2.0.0",
    "@sindresorhus/is": "^5.6.0",
    "@szmarczak/http-timer": "^5.0.1",
    "chalk": "^5.3.0",
    "cross-spawn": "^7.0.3",
    "debug": "^4.3.4",
    "detect-libc": "^2.0.2",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "fs-extra": "^11.1.1",
    "got": "^13.0.0",
    "graceful-fs": "^4.2.11",
    "jsonfile": "^6.1.0",
    "ms": "^2.1.3",
    "path-key": "^4.0.0",
    "shebang-command": "^2.0.0",
    "shebang-regex": "^4.0.0",
    "universalify": "^2.0.0",
    "which": "^3.0.1"
  },
  "resolutions": {
    "upath": "^1.0.5"
  },
  "dependencies": {
    "isexe": "^3.1.1"
  }
}
